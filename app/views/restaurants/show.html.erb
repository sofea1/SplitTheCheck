
<h3> Restaurant Details </h3>
<p>
  <strong> Name:
  <%= @restaurant.name %>
  </strong>
</p>

<p>
  <strong>Address:
  <%= @restaurant.address %>
  </strong>
</p>

<p>
  <strong>City:
  <%= @restaurant.city %>
  </strong>
</p>

<p>
  <strong>State:
  <%= @restaurant.state %>
  </strong>
</p>

<p>
  <strong>Zip:
  <%= @restaurant.zip %>
  </strong>
</p>

<p>
<strong> Split Vote - Yes:
      <td><%= @restaurant.votes.where(votetype: 1).count %>  </td>
         Split Vote - No:
      <td><%= @restaurant.votes.where(votetype: -1).count %>  </td>
</strong>
</p>

<% if user_signed_in? %>
<h3> Would you like to vote? </h3>
<p>
<strong> Is <%= @restaurant.name %> Willing To Split? </strong>
<%= button_to "Split", action: "split" %>
<%= button_to "No Split", action: "nosplit" %>
</p><br>
<%= button_to 'Add Comment', restaurants_new_comment_path(@restaurant), :class => "button", :method => :get %> <br>
<%= button_to "Add to Favorites", {id: @restaurant.id, action: "add_favorite" }, class: "button"  %><br>
<%= button_to 'Edit', edit_restaurant_path(@restaurant), :class => "button", :method => :get %> <br>
<% end %>

<%= link_to 'Back', restaurants_path %>
