<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
<p> Logged in as <strong> <%= current_user.email %></strong> </p>
<%= link_to "Log Out", destroy_user_session_path, method: :delete %><br />
<% else %>
<%= link_to "Log In", new_user_session_path %><br />
<%= link_to "Sign Up", new_user_registration_path %><br />
<% end %>


<div class="searchBar">
<%= form_tag "/restaurants", method: "GET" do %>
  <%= label_tag :name %>
  <%= text_field_tag :search_by_name, params[:search_by_name] %>

  <%= label_tag :city %>
  <%= text_field_tag :search_by_city, params[:search_by_city] %>

  <%= label_tag :state %>
  <%= text_field_tag :search_by_state, params[:search_by_state] %>

  <%= label_tag :zip %>
  <%= text_field_tag :search_by_zip, params[:search_by_zip] %> <br>

  <%= submit_tag "Search" %>
<% end %>
</div>

<% if @restaurants.empty? %>
<p> There are no restaurants to display </p></br>
<% else %>

<table>
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Split</th>
      <th>No Split</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.split.present? ? restaurant.split : 0 %></td>
        <td><%= restaurant.nosplit.present? ? restaurant.nosplit : 0 %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'View', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td><%= link_to 'View', restaurant %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>
<%= button_to 'Add Restaurant', new_restaurant_path, :class => "button", :method => :get %>
