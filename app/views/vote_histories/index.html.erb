<p id="notice"><%= notice %></p>

<h1>Vote Histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th>Votetype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vote_histories.each do |vote_history| %>
      <tr>
        <td><%= vote_history.user %></td>
        <td><%= vote_history.restaurant %></td>
        <td><%= vote_history.votetype %></td>
        <td><%= link_to 'Show', vote_history %></td>
        <td><%= link_to 'Edit', edit_vote_history_path(vote_history) %></td>
        <td><%= link_to 'Destroy', vote_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote History', new_vote_history_path %>
